@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!--begin::Main-->
<div class="d-flex flex-column flex-root">
	<!--begin::Login-->
	<div class="login login-4 login-signin-on d-flex flex-row-fluid" id="kt_login">
		<div class="d-flex flex-center flex-row-fluid bgi-size-cover bgi-position-top bgi-no-repeat" style="background-image: url('/assets/media/bg/bg-3.jpg');">
			<div class="login-form text-center p-7 position-relative overflow-hidden">
				<!--begin::Login Header-->
				<div class="d-flex flex-center mb-15">
					<a href="#">
						<img src="~/assets/media/logos/nibbs_logo.png" class="max-h-75px" alt="" />
					</a>
				</div>
				<!--end::Login Header-->
				<!--begin::Login Sign in form-->
				<div class="login-signin">
					<div class="mb-20">
						<h3>Sign In To Admin</h3>
						<div class="text-muted font-weight-bold">Enter your details to login to your account:</div>
						<div asp-validation-summary="All" class="text-danger"></div>
					</div>
					<form class="form" method="post">
						<div class="form-group mb-5">
							<input asp-for="Input.Email" class="form-control h-auto form-control-solid py-4 px-8"  placeholder="Email" autocomplete="off" />
							<span asp-validation-for="Input.Email" class="text-danger"></span>
						</div>
						<div class="form-group mb-5">
							<input asp-for="Input.Password" class="form-control h-auto form-control-solid py-4 px-8" type="password" placeholder="Password" />
							<span asp-validation-for="Input.Password" class="text-danger"></span>
						</div>
						<div class="form-group d-flex flex-wrap justify-content-between align-items-center">
							<div class="checkbox-inline">
								<label class="checkbox m-0 text-muted">
									<input type="checkbox" asp-for="Input.RememberMe" />
									<span></span>Remember me
								</label>
							</div>
							<a asp-page="./ForgotPassword" class="text-muted text-hover-primary">Forget Password ?</a>
						</div>
						<button type="submit" class="btn btn-primary font-weight-bold px-9 py-4 my-3 mx-4">Sign In</button>
					</form>
					<div class="mt-10">
						<span class="opacity-70 mr-4">Don't have an account yet?</span>
						<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-muted text-hover-primary font-weight-bold">Sign Up!</a>
					</div>
				</div>
				<!--end::Login Sign in form-->
			
			</div>
		</div>
	</div>
	<!--end::Login-->
</div>
<!--end::Main-->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
