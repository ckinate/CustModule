@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

<!--begin::Main-->
<div class="d-flex flex-column flex-root">
	<!--begin::Login-->
	<div class="login login-4 login-signin-on d-flex flex-row-fluid" id="kt_login">
		<div class="d-flex flex-center flex-row-fluid bgi-size-cover bgi-position-top bgi-no-repeat" style="background-image: url('/assets/media/bg/bg-3.jpg');">
			<div class="login-form text-center p-7 position-relative overflow-hidden">
				<!--begin::Login Header-->
				<div class="d-flex flex-center mb-15">
					<a href="/">
						<img src="~/assets/media/logos/nibbs_logo.png" class="max-h-75px" alt="" />
					</a>
				</div>
				<!--end::Login Header-->
				<!--begin::Login Sign in form-->
				<div class="login-signin">
					<div class="mb-20">
						<h3>Confirm email</h3>

						@if (!String.IsNullOrEmpty(Model.StatusMessage))
						{
							var statusMessageClass = Model.StatusMessage.StartsWith("Error") ? "danger" : "success";
							<div class="alert alert-@statusMessageClass alert-dismissible" role="alert">
								@*<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>*@

								@Model.StatusMessage <a asp-page="./Login" class="btn-close text-white">Click here to login</a>
							</div>
						}

						@*<div class="text-muted font-weight-bold"> Please check your email to reset your password.</div>*@
					</div>

				</div>
				<!--end::Login Sign in form-->

			</div>
		</div>
	</div>
	<!--end::Login-->
</div>
<!--end::Main-->

