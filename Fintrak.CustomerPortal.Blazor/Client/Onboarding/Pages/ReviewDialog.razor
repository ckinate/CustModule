																	<label>Bank Name</label>
																	<InputText class="form-control form-control-solid form-control-lg" @bind-Value="foreignBank.BankName" readonly></InputText>

																</div>
																<!--end::Input-->
															</div>
														</div>
														<div class="row">
															<div class="col-xl-6">
																<!--begin::Input-->
																<div class="form-group">
																	<label>Bank Code</label>
																	<InputText class="form-control form-control-solid form-control-lg" @bind-Value="foreignBank.BankCode" readonly></InputText>

																</div>
																<!--end::Input-->
															</div>
															<div class="col-xl-6">
																<!--begin::Input-->
																<div class="form-group">
																	<label>Account Number</label>
																	<InputText class="form-control form-control-solid form-control-lg" @bind-Value="foreignBank.AccountNumber" readonly></InputText>

																</div>
																<!--end::Input-->
															</div>
														</div>
														<div class="row">
															<div class="col-xl-12">
																<!--begin::Input-->
																<div class="form-group">
																	<label>Account Name</label>
																	<InputText class="form-control form-control-solid form-control-lg" @bind-Value="foreignBank.AccountName" readonly></InputText>

																</div>
																<!--end::Input-->
															</div>

														</div>
													</div>
												}
											}
										</div>
										<div class="tab-pane fade" id="kt_tab_pane_6_4" role="tabpanel" aria-labelledby="kt_tab_pane_6_4">
											@if (PageModel.Signatories != null && PageModel.Signatories.Signatories.Count > 0)
											{

												foreach (var (contactPerson, index) in PageModel.Signatories.Signatories.Select((v, i) => (v, i)))
												{
													var firstNameField = $"Signatories[{index}].FirstName";
													var middleNameField = $"Signatories[{index}].MiddleName";
													var lastNameField = $"Signatories[{index}].LastName";

													<div>
														<div class="row">
															<div class="col-xl-4">
																<!--begin::Input-->
																<div class="form-group">
																	<label>First Name</label>
																	<InputText id="@firstNameField" class="form-control form-control-solid form-control-lg" @bind-Value="contactPerson.FirstName" readonly></InputText>

																</div>
																<!--end::Input-->
															</div>
															<div class="col-xl-4">
																<!--begin::Input-->
																<div class="form-group">
																	<label>Middle Name</label>
																	<InputText id="@middleNameField" class="form-control form-control-solid form-control-lg" @bind-Value="contactPerson.MiddleName" readonly></InputText>

																</div>
																<!--end::Input-->
															</div>
															<div class="col-xl-4">
																<!--begin::Input-->
																<div class="form-group">
																	<label>Last Name</label>
																	<InputText id="@lastNameField" class="form-control form-control-solid form-control-lg" @bind-Value="contactPerson.LastName" readonly></InputText>

																</div>
																<!--end::Input-->
															</div>
														</div>

														<div class="row">
															<div class="col-xl-6">
																<!--begin::Input-->
																<div class="form-group">
																	<label>Email</label>
																	<InputText class="form-control form-control-solid form-control-lg" @bind-Value="contactPerson.Email" readonly></InputText>
																</div>
																<!--end::Input-->
															</div>
															<div class="col-xl-6">
																<!--begin::Input-->
																<div class="form-group">
																	<label>Mobile Phone</label>
																	<input class="form-control form-control-solid form-control-lg" value="@contactPerson.MobilePhoneNumberDisplay" readonly />
																</div>
																<!--end::Input-->
															</div>
														</div>

														<div class="row">

															<div class="col-xl-6">
																<!--begin::Input-->
																<div class="form-group">
																	<label>Designation</label>
																	<InputText class="form-control form-control-solid form-control-lg" @bind-Value="contactPerson.Designation" readonly></InputText>
																</div>
																<!--end::Input-->
															</div>
														</div>

													</div>
												}
											}
										</div>
										<div class="tab-pane fade" id="kt_tab_pane_7_4" role="tabpanel" aria-labelledby="kt_tab_pane_7_4">
											@if (PageModel.Documents != null && PageModel.Documents.Documents.Count > 0)
											{
												foreach (var (document, index) in PageModel.Documents.Documents.Select((v, i) => (v, i)))
												{
													var issueDate = document.IssueDate.HasValue ? document.IssueDate.Value.ToShortDateString() : "";
													var expiryDate = document.ExpiryDate.HasValue ? document.ExpiryDate.Value.ToShortDateString() : "";

													<input type="hidden" @bind-value="@document.DocumentId" />
													<div>
														<div class="row">
															<div class="col-xl-12">
																<!--begin::Input-->
																<div class="form-group">
																	<InputText class="form-control form-control-solid form-control-lg" @bind-Value="document.Title" readonly></InputText>
																</div>
																<!--end::Input-->
															</div>

														</div>

														<div class="row">

															<div class="col-xl-8">
																<!--begin::Group-->
																<div class="form-group">

																	<div class="col-form-label">
																		<div class="checkbox-inline">

																			<label class="checkbox">
																				<InputCheckbox @bind-Value="document.HasIssueDate" readonly></InputCheckbox>
																				<span></span>Has issue date
																			</label>


																			<label class="checkbox">
																				<InputCheckbox @bind-Value="document.HasExpiryDate" readonly></InputCheckbox>
																				<span></span>Has expiry date
																			</label>
																		</div>
																	</div>
																</div>
																<!--end::Group-->
															</div>
														</div>

														@if (PageModel.Documents.Documents[index].HasIssueDate && PageModel.Documents.Documents[index].HasExpiryDate)
														{
															<div class="row">
																<div class="col-xl-6">
																	<!--begin::Input-->
																	<div class="form-group">
																		<InputText class="form-control form-control-solid form-control-lg" @bind-Value="issueDate" readonly></InputText>
																	</div>
																	<!--end::Input-->
																</div>
																<div class="col-xl-6">
																	@if (document.HasExpiryDate)
																	{
																		<!--begin::Input-->
																		<div class="form-group">
																			<InputText class="form-control form-control-solid form-control-lg" @bind-Value="expiryDate" readonly></InputText>
																		</div>
																		<!--end::Input-->
																	}

																</div>
															</div>
														}
														else if (PageModel.Documents.Documents[index].HasIssueDate)
														{
															<div class="row">
																<div class="col-xl-6">
																	<!--begin::Input-->
																	<div class="form-group">
																		<InputText class="form-control form-control-solid form-control-lg" @bind-Value="issueDate" readonly></InputText>
																	</div>
																	<!--end::Input-->
																</div>

															</div>
														}
														else if (PageModel.Documents.Documents[index].HasExpiryDate)
														{
															<div class="row">

																<div class="col-xl-6">
																	@if (document.HasExpiryDate)
																	{
																		<!--begin::Input-->
																		<div class="form-group">
																			<InputText class="form-control form-control-solid form-control-lg" @bind-Value="expiryDate" readonly></InputText>
																		</div>
																		<!--end::Input-->
																	}

																</div>
															</div>
														}

														<!--begin::Input-->
														<div class="form-group">
															<a href="@document.LocationUrl" target="_blank">Click to view document</a>
														</div>
														<!--end::Input-->
													</div>
												}
											}
										</div>
										<div class="tab-pane fade" id="kt_tab_pane_8_4" role="tabpanel" aria-labelledby="kt_tab_pane_8_4">
											@if (PageModel.CustomFields != null && PageModel.CustomFields.CustomFields.Count > 0)
											{
												@foreach (var (field, index) in PageModel.CustomFields.CustomFields.Select((v, i) => (v, i)))
												{

													<div class="row">
														<input type="hidden" @bind-value="@field.FieldId" />

														<div class="col-xl-12">
															<!--begin::Input-->
															<div class="form-group">
																<label>
																	@field.Field
																	@if (field.Compulsory)
																	{
																		<span class="text-danger">*</span>
																	}
																</label>

																<InputText class="form-control form-control-lg form-control-solid" @bind-Value="PageModel.CustomFields.CustomFields[index].Response" readonly></InputText>

															</div>
															<!--end::Input-->
														</div>
													</div>

												}
											}
										</div>
									</div>
								</div>
							</div>
						}
					</div>
					<div class="modal-footer">
						<div class="col text-left">
							<button type="button" class="btn btn-light-primary font-weight-bold mr-2" @onclick="Close">Cancel</button>
						</div>
					</div>
				</div>


			</div>
		</div>
	</div>
   
}
