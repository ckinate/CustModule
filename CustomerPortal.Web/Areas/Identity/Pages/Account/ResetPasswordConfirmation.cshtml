@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset password confirmation";
}


<!--begin::Wrapper-->
<div class="w-lg-500px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">
	<!--begin::Form-->
	<form class="form w-100" novalidate="novalidate" id="kt_password_reset_form" method="post">
		<!--begin::Heading-->
		<div class="text-center mb-10">
			<!--begin::Title-->
			<h1 class="text-dark mb-3">Reset password confirmation</h1>
			<!--end::Title-->
			<!--begin::Link-->
			<div class="text-gray-400 fw-bold fs-4">Your password has been reset. Please <a asp-page="./Login">click here to log in</a>.</div>

			<!--end::Link-->
		</div>
		<!--begin::Heading-->
	</form>
	<!--end::Form-->
</div>
<!--end::Wrapper-->




